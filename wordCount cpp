#include <iostream>
#include <sstream>
#include <string>
using namespace std;

int main() {
    string line, word;
    int count = 0;

    cout << "Enter a line of text (press Enter to finish):\n";
    getline(cin, line); // read until Enter

    stringstream ss(line);
    while (ss >> word) {
        count++;
    }

    cout << "Total words: " << count << endl;

    return 0;
}
